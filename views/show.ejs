<%- include ("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%=blog.image%>" alt="" class="ui centered rounded image">
            <div class="content">
                <span><%=blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <p><%=blog.body%></p>
            </div>
            <a class="ui orange inverted button"href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" id = "delete">
                <button class="ui red inverted button">DELETE</button>
            </form>
        </div>
    </div>
</div>
<%- include ("partials/footer") %>